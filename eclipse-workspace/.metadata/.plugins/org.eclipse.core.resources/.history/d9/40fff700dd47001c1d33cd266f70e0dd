#include<stdio.h>

int transformacija(int n){

	int cifra,prevrti;
	while(n>=0){

	while(n>0){
		cifra=n%10;
		if(cifra%2 == 0){
			cifra=0;
			return cifra;
		}
		else{
			cifra=cifra-1;
			return cifra;
		}
		n/=10;
	}
	prevrti=prevrti*10+cifra;

	}
	return prevrti;
	}


int main(){

	int n;
	printf("Vnesi broj: ");
	scanf("%d",&n);
	printf("\nBrojot posle transformacija e: %d",transformacija(n));

	return 0;
}

