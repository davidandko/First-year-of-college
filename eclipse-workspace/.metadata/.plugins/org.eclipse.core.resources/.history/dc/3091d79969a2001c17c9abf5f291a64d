	cin>>res->lokacija;
	cout<<"Vnesete promet na restoranot: "<<endl;
	cin>>res->promet;
	cout<<"Vnesete broj na vraboteni vo restoranot: "<<endl;
	cin>>res->brVraboteni;
}
