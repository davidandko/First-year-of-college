void najkorisenRestoran(Lanec *lan){
	int i;
	int brVrab,profit=0,prometf;
	for(i=0;i<lan->brRestorani;i++){
		prometf=lan->restorani[i].promet;
		brVrab=lan->restorani[i].brVraboteni;
		if((prometf/3)*(5/100)*brVrab>profit){
			profit=(prometf/3)*(5/100)*brVrab;
			break;
		}
	}
	cout<<"Najkorisen restoran:"<<
	}
}





