#include<stdio.h>

void cifri(int n){
	int cifra;

	if(n==0){
		return;
	}
	cifra=n%10;
	cifri(n/10);
	printf("%d",cifra);

}
int main(){
	int n;
	printf("Vnesete broj: \n");
	fflush(stdout);
	scanf("%d",&n);
	cifri(n);
	return 0;
}
